{# content.jinja – 리스트 렌더링 페이지 #}
{% extends "layout" %}
{% block title %}{{ super() }} | {{ title }} {% endblock %}
{% block body %}
<h1>{{ title }}</h1>
{# entries는 Vec<&str>로 주입됨 (["Data 1", "Data 2", "Data 3"]) #}
{# Jinja의 {% for %} 문법으로 리스트 반복 출력 #}
{% for data_entry in entries %}
<ul>
    <li>{{ data_entry }}</li>
</ul>
{% endfor %}
{% endblock %}
